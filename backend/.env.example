
# Copy this file to .env and fill values
OPENAI_API_KEY=
PORT=5000
RAG_SERVICE_URL=http://localhost:5001
DATABASE_URL=sqlite://./database.sqlite
EMBEDDING_MODEL=text-embedding-3-small
STRICT_RAG_MODE=false
JWT_SECRET=your_jwt_secret

# Optional: RAG SQLite path (defaults to backend/database.sqlite)
RAG_DB_PATH=

# Optional: Google OAuth (to be wired)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional: Payments
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
STRIPE_SECRET_KEY=

# Optional: Autosummary switch for uploaded documents
DOC_AUTOSUMMARY=false
